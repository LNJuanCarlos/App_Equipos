<!-- res/layout/bottom_sheet_menu.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Primer ImageView y TextView -->
<LinearLayout
android:gravity="center"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:orientation="vertical">

<ImageView
    android:id="@+id/menu_icon"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:src="@drawable/ic_overflow" />

<TextView
    android:id="@+id/menu_text"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="8dp"
    android:text="Registros" />
</LinearLayout>

    <!-- Segundo ImageView y TextView -->
<LinearLayout
android:gravity="center"
android:layout_height="wrap_content"
android:layout_marginStart="16dp"
android:layout_width="wrap_content"
android:orientation="vertical"> <!-- Añadido marginStart para espacio -->

<ImageView
    android:id="@+id/menu_icon2"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:src="@drawable/ic_menu_opciones" />

<TextView
    android:id="@+id/menu_text2"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="8dp"
    android:text="Exportar" /> <!-- Añadido paddingTop para espacio -->
</LinearLayout>

    <!-- Puedes agregar más elementos según sea necesario -->

    </LinearLayout>

